# Use Node 18 LTS
FROM node:18

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first for better caching
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy the rest of the source code
COPY . .

# Build the frontend
RUN npm run build

# Expose the port Cloud Run will use
EXPOSE 8080

# Start the backend server
CMD ["npm", "run", "server"]
